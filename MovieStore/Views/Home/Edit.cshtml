@model MovieModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
@using (@Html.BeginForm("SaveChanges","Home", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "form-label" })<br />
        @Html.TextBoxFor(m => m.Title, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "label-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Director, new { @class = "form-label" })<br />
        @Html.TextBoxFor(m => m.Director, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Director)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "form-label" })<br />
        @Html.TextBoxFor(m => m.Description, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "form-label" })<br />
        @Html.TextBoxFor(m => m.Price, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <input value="Save" type="submit" />
}

